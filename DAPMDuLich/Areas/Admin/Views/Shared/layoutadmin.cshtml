                                    <span class="sub-item">Mức giá</span>
                                </a>
                            </li>
                            <li>*@
                                    <a href="~/Admin/AwaitingApprovalTour/ListPendingTours">
                                        <span class="sub-item">Tour</span>
                                    </a>
                                    <a href="~/Admin/Booking/List">
                                        @*<i class="fa fa-user" aria-hidden="true"></i>*@
                                        <p>Đặt tour</p>
                                    </a>
                                    <a href="~/Admin/TourStatistics/Index">
                                        @*<i class="fa fa-user" aria-hidden="true"></i>*@
                                        <p>Thống kê</p>
                                    </a>


                        </li>
                    </ul>
                </div>
                </li>
                <li class="nav-item">
                    <a href="~/Admin/Account/List">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <p>Tài khoản Khách Hàng</p>
                    </a>
                    <a href="~/Admin/AccountContributor/List">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <p>Tài khoản Người cung cấp</p>
                    </a>
                </li>
                
                @*<li class="nav-item">
            <a href="~/Admin/DatTourr/DanhSach">
                <i class="fa fa-user" aria-hidden="true"></i>
                <p>Đặt tour</p>
            </a>
        </li>*@
                </ul>
            </div>
        </div>
    </div>
    <!-- End Sidebar -->
    <div class="main-panel">
        <div class="content">
            <div class="page-inner mt--5">
                @RenderBody()
            </div>
        </div>
    </div>


    </div>
    <!--   Core JS Files   -->
    <script src="~/Areas/Admin/assets/js/core/jquery.3.2.1.min.js"></script>
    <script src="~/Areas/Admin/assets/js/core/popper.min.js"></script>
    <script src="~/Areas/Admin/assets/js/core/bootstrap.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/Areas/Admin/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/Areas/Admin/assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js"></script>
    <!-- jQuery Scrollbar -->
    <script src="~/Areas/Admin/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script src="~/Content/ckeditor/ckeditor.js"></script>
