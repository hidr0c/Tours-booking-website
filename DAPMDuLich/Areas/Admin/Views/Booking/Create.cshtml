@model DAPMDuLich.Models.DatTour
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Booking</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ID, "Select Tour", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserID, "Select User", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ContributorID, "Select Contributor", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ContributorID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ContributorID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, "Select Status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Status", new List<SelectListItem>
            {
                new SelectListItem { Text = "Unconfirm", Value = "" },
                new SelectListItem { Text = "Success", Value = "true" },
                new SelectListItem { Text = "Cancel", Value = "false" },
            }, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CreateAt, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CreateAt, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
            @Html.ValidationMessageFor(model => model.CreateAt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ThanhToan, "Select ThanhToan", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Trạng thái thanh toán", new List<SelectListItem>
            {
                new SelectListItem { Text = "Chưa xác nhận", Value = "" },
                new SelectListItem { Text = "Đã thanh toán", Value = "true" },
                new SelectListItem { Text = "Chưa thanh toán", Value = "false" },
            }, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Traveler Count", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("travelerCount", null, new { @class = "form-control" })
            @Html.ValidationMessage("travelerCount", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" /> |
            @Html.ActionLink("Quay về trang danh sách", "List")
        </div>
    </div>
</div>
}
