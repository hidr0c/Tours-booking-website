@model DAPMDuLich.Models.ViewModel.TourStatisticsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/layoutadmin.cshtml";
}
<div class="row" style="margin-top:50px">
    <div class="col-md-12">
        <h3>DANH SÁCH THỐNG KÊ</h3>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Tổng Số Đặt Tour
                    </div>
                    <div class="card-body">
                        <p>@Model.TongSoDatTour</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Tổng Số Đặt Tour Đã Thanh Toán
                    </div>
                    <div class="card-body">
                        <p>@Model.TongSoDatTourDaThanhToan</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Tổng Số Đặt Tour Chưa Thanh Toán
                    </div>
                    <div class="card-body">
                        <p>@Model.TongSoDatTourChuaThanhToan</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Tổng Số Tiền Đã Thanh Toán
                    </div>
                    <div class="card-body">
                        <p>@Model.TongSoTienDaThanhToan VND</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        .card-body {
            padding: 15px;
        }
    </style>

