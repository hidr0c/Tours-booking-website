@model DAPMDuLich.Models.Contributor

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Areas/Contributors/Views/Shared/LayoutDN.cshtml";
}
<style>
    body {
        background-image: url('/Areas/Contributors/assets/img/dangnhap.jpg');
        background-size: cover;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.8);
        width: 350px;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .login-container input {
            width: 100%;
            padding: 15px;
            margin: 15px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        .login-container button {
            width: 100%;
            padding: 15px;
            background-color: #007BFF;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .login-container button:hover {
                background-color: #0056b3;
            }

        .login-container a {
            display: block;
            text-align: right;
            margin-top: 10px;
            color: #007BFF;
            text-decoration: none;
        }

    .text-danger {
        color: red;
    }
</style>
<div class="login-container">
    <h2>Đăng Nhập</h2>
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label for="username">Tên Đăng nhập</label>
            @Html.TextBoxFor(model => model.ContributorName, new { @class = "form-control", @id = "username", @required = "required" })
            @Html.ValidationMessageFor(model => model.ContributorName, "", new { @class = "text-danger" })

            <label for="password">Mật khẩu</label>
            @Html.PasswordFor(model => model.ContributorPassword, new { @class = "form-control", @id = "password", @required = "required" })
            @Html.ValidationMessageFor(model => model.ContributorPassword, "", new { @class = "text-danger" })

            <button type="submit">Đăng nhập</button>
            <a href="#">Quên mật khẩu?</a>
        </div>
    }
</div>
