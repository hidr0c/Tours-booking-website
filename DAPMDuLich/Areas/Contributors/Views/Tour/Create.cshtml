@model DAPMDuLich.Models.TourDuLich

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Contributors/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm tour</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*<label>Tên tour</label>*@
            @Html.LabelFor(model => model.TieuDe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Hình ảnh</label>*@
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TripStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TripStart, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.TripStart } })
                @Html.ValidationMessageFor(model => model.TripStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TripEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TripEnd, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.TripEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Lịch Trình</label>*@
            @Html.LabelFor(model => model.LichTrinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LichTrinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LichTrinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Địa điểm</label>*@
            @Html.LabelFor(model => model.DiaDiem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaDiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Số người tối đa</label>*@
            @Html.LabelFor(model => model.SoNguoiToiDa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoNguoiToiDa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoNguoiToiDa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Số người tối đa</label>*@
            @Html.LabelFor(model => model.PhuongTien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhuongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhuongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*<label>Giá tour</label>*@
            @Html.LabelFor(model => model.GiaTour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaTour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*id tinh*@
            @Html.LabelFor(model => model.idTinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idTinh,
                    new SelectList(new DAPMDuLich.Models.mapTinhThanh().DanhSach(), "ID_Tinh", "Ten"),
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*id Loại tour*@
            @Html.LabelFor(model => model.idLoaiTour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idLoaiTour,
                    new SelectList(new DAPMDuLich.Models.mapLoaiTour().DanhSach(), "ID", "Ten"),
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idLoaiTour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*Mức giá*@
            @Html.LabelFor(model => model.idMucGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.idMucGia,
                    new SelectList(new DAPMDuLich.Models.mapMucGia().DanhSach(), "ID", "Gia"),
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idMucGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DanhSach")
</div>
