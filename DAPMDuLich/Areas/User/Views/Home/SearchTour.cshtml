@model List<DAPMDuLich.Models.TourDuLich>
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Areas/User/Views/Shared/LayoutCus.cshtml";
}
<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />
<!-- Phần nội dung chung -->
<div class="contenner">
    <!-- Tim Kiem -->
    <div class="col-12" style="padding: 10px 100px;">
        <div class="col-12" style="padding: 10px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
            <form action="@Url.Action("TimKiem", "Home", new { area = "User" })" method="get" style="display: flex; align-items: center;">
                <!-- Loại tour -->
                <div class="col-2" style="padding: 0px 10px; flex: 1;">
                    <select style="width: 100%; height: 35px;" name="idLoaiTour">
                        <option>Loại tour</option>
                        @foreach (var item in new DAPMDuLich.Models.mapLoaiTour().DanhSach())
                        {
                            <option value="@item.ID" @Html.Raw(item.ID == (int?)ViewBag.idLoaiTour ? "selected" : "")>@item.Ten</option>
                        }
                    </select>
                </div>
                <!-- Tỉnh -->
                <div class="col-2" style="padding: 0px 10px; flex: 1;">
                    <select style="width: 100%; height: 35px;" name="idTinh">
                        <option>Tất cả tỉnh</option>
                        @foreach (var item in new DAPMDuLich.Models.mapTinhThanh().DanhSach())
                        {
                            <option value="@item.ID_Tinh" @Html.Raw(item.ID_Tinh == (int?)ViewBag.idTinh ? "selected" : "")>@item.Ten</option>
                        }
                    </select>
                </div>
                <!-- Mức giá -->
                <div class="col-2" style="padding: 0px 10px; flex: 1;">
                    <select style="width: 100%; height: 35px;" name="idMucGia">
                        <option>Tất cả mức giá</option>
                        @foreach (var item in new DAPMDuLich.Models.mapMucGia().DanhSach())
                        {
                            <option value="@item.ID" @Html.Raw(item.ID == (int?)ViewBag.idMucGia ? "selected" : "")>@item.Gia</option>
                        }
                    </select>
                </div>
                <!-- Nút submit -->
                <div class="col-2" style="padding: 0px 10px; flex: 1;">
                    <button type="submit" style="width: 100%; height: 35px; background: green; border: none; color: white; font-size: 13pt;">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-12" style="padding: 10px 100px;">
    <div class="col-12" style="text-align: center;">
        <h1>
            <span style="font-size: 50px; color: #ffc700;">Kết quả</span>
        </h1>
    </div>
    <!-- Hang 1 -->
    <div class="tour-container" style="display: flex; flex-wrap: wrap; gap: 20px;">
        @foreach (var item in Model)
        {
            <div class="tour-card" style="flex: 1 1 calc(33.333% - 20px); box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; padding: 10px; border-radius: 10px;">
                <img src="@item.HinhAnh" alt="Tour Image" style="width: 100%; height: auto; border-radius: 10px;">
                <div class="tour-info" style="padding: 10px;">
                    <h2 style="font-size: 20px; margin: 10px 0;">@item.TieuDe</h2>
                    <p style="margin: 5px 0;"><strong>Ngày đi:</strong> @item.TripStart</p>
                    <p style="margin: 5px 0;"><strong>Ngày về:</strong> @item.TripEnd</p>
                    <p style="margin: 5px 0;"><strong>Số người tối đa:</strong> @item.SoNguoiToiDa</p>
                    <p style="margin: 5px 0;"><strong>Địa điểm:</strong> @item.DiaDiem</p>
                    <p style="margin: 5px 0;"><strong>Giá tour:</strong> @item.GiaTour</p>
                    <button style="padding: 10px 20px; background-color: #ffc700; border: none; border-radius: 5px; cursor: pointer;">Chi tiết</button>
                </div>
            </div>
        }
    </div>
</div>

