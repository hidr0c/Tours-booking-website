@model DAPMDuLich.Models.TaiKhoan

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h3 class="mb-4" style="margin-top:100px">Thông tin cá nhân</h3>
            <form>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Tên Đăng Nhập:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.TenDangNhap)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Họ Tên:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.TenHienThi)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Mật khẩu:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.MatKhau)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Email:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Số điện thoại:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.SoDienThoai)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Địa chỉ:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.DiaChi)</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label>Số tiền hiện có:</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Tien) VND</p>
                    </div>
                </div>
                <div class="row form-group" style="margin-bottom: 130px">
                    <div class="col-md-12">
                        @Html.ActionLink("Chỉnh sửa", "Edit", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
