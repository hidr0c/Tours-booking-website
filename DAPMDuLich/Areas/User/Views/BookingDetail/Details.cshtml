@model DAPMDuLich.Models.DatTourChiTiet
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/User/Views/Shared/LayoutDatTour.cshtml";
}

<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />

<div class="container">
    <div class="row">
        <div class="col-md-12" style="margin-bottom:260px;justify-items:center">
            <h3>Chi tiết trang đặt tour</h3>
            <form action="@Url.Action("ThanhToan", "BookingDetail", new { id = Model.BookingDetailID })" method="post">
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Tên tour: &nbsp;</a>
                        @ViewBag.TourName
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Ngày đi: &nbsp;</a>
                        @ViewBag.TripStart
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Ngày về: &nbsp;</a>
                        @ViewBag.TripEnd
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Phương tiện: &nbsp;</a>
                        @ViewBag.TripType
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Số lượng khách du lịch: &nbsp;</a>
                        @ViewBag.TravelerCount
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Tổng giá tiền: &nbsp;</a>
                        @Html.DisplayFor(model => model.Price) VND
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Thời gian đặt: &nbsp;</a>
                        @Html.DisplayFor(model => model.CreateAt)
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        @if (!Model.DatTour.ThanhToan ?? false) // Kiểm tra trạng thái thanh toán
                        {
                            <input type="submit" value="Thanh toán" class="btn btn-success" />
                        }
                        else
                        {
                            <span class="label label-success">Đã thanh toán</span>
                        }
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        @Html.ActionLink("Quay về booking history", "History", "Booking", null, new { @class = "btn btn-danger", @type = "button" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
