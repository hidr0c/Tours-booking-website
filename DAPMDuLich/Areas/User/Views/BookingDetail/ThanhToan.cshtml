@model DAPMDuLich.Models.DatTourChiTiet
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Areas/User/Views/Shared/LayoutDatTour.cshtml";
}

<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />

<div class="container">
    <div class="row">
        <div class="col-md-12" style="margin-bottom:350px;justify-items:center">
            <h3>Thông tin thanh toán</h3>
            <form action="#">
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Tên đăng nhập: &nbsp;</a>
                        @ViewBag.TenDangNhap
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Ngày đặt: &nbsp;</a>
                        @ViewBag.CreateAt
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Trạng thái thanh toán: &nbsp;</a>
                        @if (ViewBag.ThanhToan == true)
                        {
                            <span class="label label-success">Đã thanh toán</span>
                        }
                        else
                        {
                            <span class="label label-danger">Chưa thanh toán</span>
                        }
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <a>Mã thanh toán: &nbsp;</a>
                        @ViewBag.MaThanhToan
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info">
                                @ViewBag.Message
                            </div>
                        }
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        @Html.ActionLink("Quay về booking history", "History", "Booking", null, new { @class = "btn btn-danger", @type = "button" })
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
