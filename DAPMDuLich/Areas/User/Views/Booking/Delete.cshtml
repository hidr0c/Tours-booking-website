@model DAPMDuLich.Models.DatTour

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="gtco-section border-bottom" style="margin-top:100px">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 animate-box">
                        <h3>Thông tin tour</h3>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Tên tour: &nbsp;</a>
                                @Html.DisplayFor(model => model.TourDuLich.TieuDe)
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Ngày đi: &nbsp;</a>
                                @Html.DisplayFor(model => model.TourDuLich.TripStart)
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Ngày về: &nbsp;</a>
                                @Html.DisplayFor(model => model.TourDuLich.TripEnd)
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Giá tour : &nbsp;</a>
                                @Html.DisplayFor(model => model.TourDuLich.GiaTour)
                                VND
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-md-push-1 animate-box">
                        <div class="gtco-contact-info">
                            <h3>Thông tin của bạn</h3>
                            <ul>
                                <li class="row form-group">
                                    <div class="col-md-12">
                                        <a>Your name : &nbsp;</a>
                                        @Html.DisplayFor(model => model.TaiKhoan.TenHienThi)
                                    </div>
                                </li>
                                <li class="row form-group">
                                    <div class="col-md-12">
                                        <a>Email : &nbsp;</a>
                                        @Html.DisplayFor(model => model.TaiKhoan.Email)
                                    </div>
                                </li>
                                <li class="row form-group">
                                    <div class="col-md-12">
                                        <a>Trạng thái: &nbsp;</a>
                                        @Html.DisplayFor(model => model.Status)
                                    </div>
                                </li>
                                <li class="row form-group">
                                    <div class="col-md-12">
                                        <a>Thanh toán: &nbsp;</a>
                                        @Html.DisplayFor(model => model.ThanhToan)
                                    </div>
                                </li>
                                <li class="row form-group">
                                    <div class="form-group" style="margin-bottom:100px">
                                        <input type="submit" value="Hủy tour" class="btn btn-danger" />
                                        @Html.ActionLink("Quay lại", "History", null, new { @class = "btn btn-secondary", style = "margin-left: 10px;" })
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </div>
}
