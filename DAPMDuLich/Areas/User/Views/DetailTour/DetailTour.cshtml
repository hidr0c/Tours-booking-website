@model DAPMDuLich.Models.TourDuLich
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/User/Views/Shared/LayoutCus.cshtml";
}

<link rel="stylesheet" href="~/CSS/animate.css" />
<link rel="stylesheet" href="~/CSS/bootstrap.css" />
<link rel="stylesheet" href="~/CSS/icomoon.css" />
<link rel="stylesheet" href="~/CSS/owl.carousel.min.css" />
<link rel="stylesheet" href="~/CSS/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/CSS/style.css" />

<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <!-- Nội dung -->
                    <div class="col-md-8 animate-box">
                        <h3>Thông tin chi tiết tour</h3>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Tên tour: &nbsp;</a>
                                @Model.TieuDe
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Mô tả : &nbsp;</a>
                                @Model.BaiViet
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Ngày đi: &nbsp;</a>
                                @Model.TripStart
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Ngày về: &nbsp;</a>
                                @Model.TripEnd
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Số người tối đa: &nbsp;</a>
                                @Model.SoNguoiToiDa
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Phương tiện : &nbsp;</a>
                                @Model.PhuongTien
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <a>Giá Tour: &nbsp;</a>
                                @Model.GiaTour VND
                            </div>
                        </div>

                        <div class="form-group">
                            <div style="display: flex; justify-content: left; margin-top: 20px;">
                                <a href="@Url.Action("Create", "Booking", new { id = @Model.ID })" style="padding: 10px 20px; background-color: #28a745; border: none; border-radius: 5px; color: white; cursor: pointer; text-decoration: none;">Đặt tour</a>
                                <div style="margin-left:20px; padding-top:10px">
                                    @Html.ActionLink("Quay về trang chủ", "Home", "Home")
                                </div>
                            </div>
                            @*@Html.ActionLink("Back to Home", "Home", "TrangChu")*@
                        </div>
                    </div>
                    <!-- Hình ảnh -->
                    <div class="col-md-4 animate-box">
                        <div style="width: 300px; height: 200px; overflow: hidden; border-radius: 10px; position: relative;">
                            <img src="@Model.HinhAnh" alt="Tour Image" style="width: 100%; height: 100%; object-fit: cover;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
